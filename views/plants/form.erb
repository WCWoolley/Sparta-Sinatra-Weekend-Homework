<form action="/plants/<%= @plant.id %>" method="POST">
  <div>
    <label>Scientific Plant Name</label>
    <input type="text" name="title" placeholder="Enter a Scientific Name" value="<%= @plant.scientific_plant_name %>">
  </div>

  <div>
    <label>Common Plant Name</label>
    <input type="text" name="title" placeholder="Enter a Common Name" value="<%= @plant.common_plant_name %>">
  </div>

  <div>
    <input type="submit" value="Save Post">
  </div>
  <% if(@plant.id) %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>
</form>
